<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.EditActivity"
        android:id="@+id/cl_edit"
>

    <EditText
            android:id="@+id/et_movie_title"
            android:hint="Movie Title"
            android:inputType="text"
            app:layout_constraintRight_toLeftOf="@id/checkBox"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="MissingConstraints" android:autofillHints="Movie Title"/>

    <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="watched?"
            app:layout_constraintLeft_toRightOf="@id/et_movie_title"

            tools:ignore="MissingConstraints"/>
    <Button
            android:id="@+id/btn_delete_movie"
            android:text="Delete Movie"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/cl_edit"
            app:layout_constraintRight_toLeftOf="@id/btn_save_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btn_save_movie"
            android:text="Save Movie"
            android:backgroundTint="#00FF00"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/cl_edit"
            app:layout_constraintLeft_toRightOf="@id/btn_delete_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>