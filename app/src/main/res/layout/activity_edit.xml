<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        tools:context=".Controller.EditActivity">

    <EditText
            android:id="@+id/et_movie_title"
            android:hint="Movie Title"
            app:layout_constraintBottom_toTopOf="@id/btn_delete_movie"
            app:layout_constraintRight_toLeftOf="@id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="watched?"
            app:layout_constraintLeft_toRightOf="@id/et_movie_title"
            app:layout_constraintBottom_toTopOf="@id/btn_save_movie"
    />
    <Button
            android:id="@+id/btn_delete_movie"
            android:text="Delete Movie"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/et_movie_title"
            app:layout_constraintRight_toLeftOf="@id/btn_save_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btn_save_movie"
            android:text="Save Book"
            android:backgroundTint="#00FF00"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/checkBox"
            app:layout_constraintLeft_toRightOf="@id/btn_delete_movie"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>